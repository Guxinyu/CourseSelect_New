<%= form_for @notice, html: {class: 'form-horizontal', role: 'form'} do |f|  %>
    <%= render 'shared/error_messages', :object => @notice %>

    <div class="form-group" , style="margin-right: 400px">
      <%= f.label "课程", class: 'col-sm-3 control-label'%>
      <div class="col-sm-9">
        <div class="input-group">
          <div class="input-group-addon"><span class="glyphicon glyphicon-arrow-right"></span></div>
           <%= f.select :course_id, options_for_select(current_user.teaching_courses.map{|f| [f.name,f.id]}) , style: "padding-right: 100px"%>                      
        </div>
      </div>
    </div>
    <div class="form-group", style="margin-right: 400px">
      <%= f.label "主题", class: 'col-sm-3 control-label' %>
      <div class="col-sm-9">
        <div class="input-group">
          <div class="input-group-addon"><span class="glyphicon glyphicon-arrow-right"></span></div>
          <%= f.text_field :theme, class: 'form-control', placeholder: "输入主题" ,style: "padding-right: 100px;width:550px"%>
        </div>
      </div>
    </div>

    <div class="form-group", style="margin-right: 400px">
      <%= f.label "内容", class: 'col-sm-3 control-label' %>
      <div class="col-sm-9" >
        <div class="input-group" style="height:100px">
          <div class="input-group-addon"><span class="glyphicon glyphicon-arrow-right" ></span></div>
          <%= f.text_area :content, :rows=>20, :cols=>20, class: 'form-control', style: "height:500px;width:550px",placeholder: "输入内容" %>
        </div>
      </div>
    </div>

     <tr>
       <%= check_box_tag (:send_mail) %> 
       <%= label_tag :send_mail, "同时发送邮件" %> 
       <%= f.submit '发布', class: "btn btn-primary btn-block" %> 
    </tr>
    <%= link_to '取消', notices_path, :class => "btn btn-default btn-block" %>

<% end %>
